[Compositing]
Enabled=true
OpenGLIsUnsafe=false

[MouseBindings]
# Disable right-click context menu on title bar
CommandActiveTitlebar3=Nothing
CommandInactiveTitlebar3=Nothing

[Windows]
# Enable Window shading (reduce window to title bar)
TitlebarDoubleClickCommand=Shade
# Window unshading after titlebar hover after x milliseconds
ShadeHover=true
ShadeHoverInterval=500
# Window placement strategy
Placement=Cascade
